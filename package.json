{
    "name": "steam-vgui-language",
    "displayName": "Steam VGUI Language",
    "description": "Steam Vgui Language Syntax Highlighting",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "vgui",
            "aliases": [ "Steam VGUI" , "VGUI" , "vgui" ],
            "extensions": [ ".layout", ".res", ".styles", ".menu" ],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "vgui",
            "scopeName": "source.vgui",
            "path": "./syntaxes/vgui.tmLanguage.json"
        }]
    }
}